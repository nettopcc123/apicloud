.discount_main
    padding .1rem .2rem
    &::before
        content ''
        position fixed
        width 1px
        //background rgba(0,0,0,.1)
        border-left 1px solid rgba(0,0,0,.1)
        top 0
        left 0
        height 100%
        //bottom 0
        //transform scale(.5,1)
.discount_det
    display none
    .error
        margin 3rem .3rem
        padding .3rem
        font-size 1.2em
        background rgba(0,0,0,.1)
        text-align center
        border-radius .08rem
        border 1px solid rgba(200,200,200,.1)
        font-weight 200
        color $gold
.yh_page
    padding .2rem
    .itemx
        position relative
        margin .05rem 0
        .img
            height 2rem


.itemx
    margin .2rem 0
    border-radius .1rem
    padding 3px
    .img
        height 3.6rem
        position relative
    .foot
        padding .1rem
    h3
        font-size .3rem
        color $gold
    h4
        opacity .4
    p
        font-size .28rem
    ul
        clear()
        font-size .28rem
        margin-bottom .1rem
        li
            height .3rem
            line-height .3rem
            padding-right .2rem
            margin .1rem .2rem .1rem 0
            border-right 1px solid $tmb
            float left


        a
            float left
            color #439aea
            cursor pointer
            padding-top 2px
            &:hover
                color #5f4d25
    b
        font-weight normal
    .cb
        display none
.pad
    border-radius .1rem
    background-color rgba(200,200,200,.3)
    padding 3px
.img
    background-position center
    background-repeat no-repeat
    background-size cover
    overflow hidden
    border-radius .08rem
    background-image url("../image/logo_sb.svg")
    &[type="PT"]
        background-size contain
    &[type="KY"]
        background-size auto 90%



.live_main
    padding .2rem .1rem
    clear()

.item
    float left
    width 50%
    padding .1rem
    &.kyqp .img
        height 3rem


    .img
        height 2rem
        position relative
        ovt()
        span
            min-width .6rem
            text-align center
            padding 0 3px
            float left
            color #fff
            &:nth-child(1)
                background #ea6a30
            &:nth-child(2)
                background rgba(0,0,0,.85)
            &:nth-child(3)
                background rgba(0,180,60,.9)
    h3
    p
    .line-btn
        line-height 1.4
        font-weight normal
        clear both
        ovt()

    p
        font-size .28rem

    h3
        font-size .32rem
        color $gold

    .btn
        padding .4rem 0
        line-height 1
        height auto
    .foot
        position relative
        padding .1rem

.line-btn
    font-size 0
    padding 0 .1rem .2rem .1rem
    .btn
        display inline-block
        height auto
        line-height 1
        width 45%
        font-size .24rem
        padding .15rem 0
        border 0.5px solid $gold
        &:nth-child(2)
            margin-left 10%

.dzyx
    padding .2rem .05rem
    .item
        padding .1rem .05rem
        width 33.33%
        &:nth-child(2n) .img
            background-color #2b6e84
        &:nth-child(5n - 1) .img
            background-color #d09233
        &:nth-child(4n + 1) .img
            background-color #8bca78
        &:nth-child(7n + 1) .img
            background-color #794
        p
            font-size .2rem
        h3
            width 80%
            font-size .26rem
    .img
        height 2rem
        font-size .22rem
        position relative



    .fav
        position absolute
        right 0
        top .3rem
        text-align center
        color #666
        cursor pointer
        &.active i
            color rgba(240,80,0,.8)
        i
            font-size 20px
            position absolute
            z-index 9
            right 3px
            color rgba(80,80,80,.2)
        .gd
            transform scale(1.8)
            display none

        span
            padding-top 25px
            display block
            font-size 12px
            line-height 1
            color #999

