$mh = 4rem
.mine_page
    padding-top $mh
    .header
        height $mh
        position fixed
        color #222
        z-index 99
        top 0
        width 100%
        background #f5efe5 -webkit-linear-gradient(-30deg, rgba(97, 54, 28, 0.4), rgba(255, 255, 220, 0.2), rgba(156, 85, 8, 0.27))
        box-shadow 0 0 .2rem rgba(0,0,0,.4),inset 0 1rem 1rem rgba(0,0,0,.1)
        .icon-menun
            position absolute
            top .3rem
            left .3rem
        .avatar
            position absolute
            width 1.4rem
            height 1.4rem
            border-radius 50%
            background #fff url("../image/logo_s.svg") no-repeat center
            background-size 90% auto
            border 2px solid #cacec0
            top 1rem
            left .5rem
        i
            color #fff
        .right
            position absolute
            top .3rem
            right .2rem
            i
                padding .2rem
                font-size .36rem
            .icon-volume-high
                font-size .4rem
            sup
                position absolute
                background rgba(255,10,0,.9)
                color #fff
                padding 0 .1rem
                border-radius .3rem
                font-size .16rem
                right 0
                top -.1rem
        .con
            padding .8rem 0 0 2.2rem
            font-size .28rem

            b
                font-weight normal
                margin-right .2rem
                font-size .24rem

            i
                font-size .36rem
            h5
                font-size .24rem
                font-weight normal
                opacity .6

        .icon-chevron-right
            position absolute
            bottom .3rem
            right .1rem
        ul
            position absolute
            background #af3333
            height 1rem
            width 100%
            left 0
            bottom 0
            text-align center
            padding .13rem 0
            color #fff
            li
                float left
                width 50%
                *
                    font-weight normal
                    line-height 1.2
                h2
                    font-size .36rem
                h4
                    font-size .24rem
                    color #ccc
                &:last-child
                    border-left 1px solid rgba(255,255,255,.2)



    .cont
        padding .1rem .3rem
        .panel
            margin .3rem 0
            padding .2rem .1rem 0 .1rem
            background #f3f3f3
            border-radius .1rem
            h3
                color $gold
                font-size .24rem
                padding-left .2rem
                font-weight normal
            .box
                clear()
                text-align center
                padding .2rem 0
                .ico
                    width 33.33%
                    height 1.5rem
                    float left
                    i
                        display inline-block
                        width .8rem
                        height .8rem
                        background-color transparent
                    p
                        margin-top .1rem
                        font-size .28rem


        .c00
        .c10
            color #5297fe
        .c01
            color #e74342
        .c11
            color #e84443
        .c02
        .c12
            color #45b247
        .c13
            color #a962ff
        .c14
            color #dc6813
        .c15
            color #e94440
        .c20
            color #db6817
        .c21
            color #d9b368
        .c22
            color #e94343

    .btn
        margin .5rem auto

    .lv_star
        position absolute
.lv_star
    width 2rem
    height .4rem
    font-size 0
    b
        display block
        height .4rem
        background url("../image/star_2.svg") repeat-x left center/auto 100%

.my_setting
    padding .3rem

    h3
        color $gold
        opacity .7
        font-weight 300

.my_bank
    padding .3rem
    .card
        text-align right
        padding .3rem .4rem
        margin-bottom .3rem
        background #9cb839 -webkit-linear-gradient(top, rgba(255,255,255,.2), rgba(0,0,0,.2))
        border-radius .1rem
        height 2.4rem
        position relative
        overflow hidden
        color #fff
        h2
            font-weight 100
            padding-top .1rem
            font-size .56rem
            white-space nowrap
            height 1.2rem
            text-shadow 1px 1px 2px rgba(0,0,0,.3)
        h2,h3
            position relative
            z-index 3
        .ico
            position absolute
            width 1.6rem
            height 1.6rem
            background url("../image/bank/NO.png") no-repeat center/contain
            bottom .4rem
            left .2rem
        .check
            position absolute
            z-index 9
            right 0
            bottom 0
            width 1rem
            height 1rem
            background url("../image/check.svg") no-repeat center/cover
            opacity 0
        &:not(.active):active,
        &:not(.active):hover
            .ove
                top 0
        &.active
            .check
                opacity 1
        .ove
            position absolute
            z-index 9
            top -100%
            left 0
            width 100%
            height 100%
            text-align center
            background rgba(0,0,0,.5)
            padding-top .85rem
            transition .1s .3s
            .btn
                width 30%
                display inline-block
                margin 0 .3rem
    .add
        background rgba(0,0,0,.1)
        border-radius .1rem
        height 2.4rem
        text-align center
        line-height 2rem
        font-size 1.2rem
        color #999

.my_bank_add
    padding .1rem .3rem
    .btn
        margin-top .8rem
    .tip
        color #777
        text-align center

.update
    padding .2rem
    margin .2rem
    border-radius .1rem
    .tit
        color $gold
        font-size .3rem
    .btn
        margin .5rem auto
    .cs
        margin .2rem 0
    dl
        display inline-block
        margin-right .3rem
        dt,dd
            display inline-block
        dt
            margin-right .1rem
            opacity .7
    .md_view
        margin .2rem 0
        background #0001
        max-height 4rem
        overflow-y auto
        border-radius .1rem

