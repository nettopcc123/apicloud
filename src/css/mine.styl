.pay_ico
    background-image url("../image/yh_union.png")


for $i in alipay atm_bank bank bar_bank jd qq quick union wap_bank wechat
    .pay_ico[type*=\" {$i}\"]
        background-image url("../image/yh_"+ $i +".png")

for $i in ABC BCM BOB BOC BOSH CCB CEB CGB CIB CITIC CMB CMBC HFB HXB ICBC PSBC SDB SPDB
    .bank_ico[type=\" {$i}\"]
    .card[type=\" {$i}\"] .ico
        background-image url("../image/bank/"+ $i +".png")

for $i in 0..8
    .mine_page .img[type=\" {$i}\"]
        background-image url("../image/menu"+ $i +".svg")
