        background-color #3bc776
    &[type="BCM"]
        background-color #2a77ce
    &[type="BOB"]
        background-color #ff5e3f
    &[type="BOC"]
        background-color #eb2c3a
    &[type="BOSH"]
        background-color #4598ce
    &[type="CCB"]
        background-color #1b60af
    &[type="CEB"]
        background-color #fbd065
    &[type="CGB"]
        background-color #ff6f3f
    &[type="CIB"]
        background-color #1b60af
    &[type="CITIC"]
        background-color #ff6f3f
    &[type="CMB"]
        background-color #f34747
    &[type="CMBC"]
        background-color #3858bf
    &[type="HFB"]
        background-color #469ef1
    &[type="HXB"]
        background-color #ff6f3f
    &[type="ICBC"]
