.hp-box 
    margin .3rem
    background #f1f1f1
    border-radius 5px


.hp-menu 
    padding .1rem 0
    clear()
    li 
        width 25%
        height 1.2rem
        padding .1rem 0
        float left
        text-align center
        color #666
        i 
            display block
            margin auto
            width .6rem
            line-height .6rem
            border-radius 50%
            font-size .4rem
            color #e84444
        
        &:nth-child(1) i 
            color #a88c56
        
        &:nth-child(2) i,
        &:nth-child(8) i 
            color #5195fc
        
        &:nth-child(4) i,
        &:nth-child(5) i
        
            color #43b349
        
    


.hp-level
    position relative
    background #0001
    color #777
    font-size .14rem
    transition .5s
    overflow hidden
    opacity 0
    max-height 0
    &.show 
        opacity 1
        max-height 2rem
        margin .15rem 0
        padding .3rem .3rem .3rem 1.5rem
        * 
            opacity 1
        
    
    * 
        opacity 0
        transition .5s .3s
        display inline-block
        vertical-align middle
        margin-right .2rem

    h3
        font-size .3rem
        font-weight 300
    .avatar 
        position absolute
        width .8rem
        height .8rem
        border-radius 50%
        left .4rem
        top 50%
        margin-top -.4rem
        background #fff url("../image/logo_s.svg") no-repeat center
        background-size 90% auto
        border 1px solid #6666



.li-group 
    color #666
    li 
        position relative
        padding .2rem .3rem .2rem .2rem
        i 
            position absolute
            right .1rem
            top 50%
            transform translateY(-50%)
        
        &::after,
        &::before 
            content ''
            position absolute
            height 1px
            left 0
            right 0
        
        &::after 
            top 0
            background #fffc
            transform scaleY(.5)
        
        &::before 
            bottom 0
            background #0002
            transform scaleY(.5) translateY(50%)
        
        &:first-child::after,
        &:last-child::before 
            display none
        
        p 
            white-space nowrap
            overflow hidden
            text-overflow ellipsis
            color #7d5d43
        
    

.helps
    padding-bottom .1rem
    


.hp-tit
    margin .3rem
    color $gold
    font-size .26rem
    line-height 1.2

.hp-desc
    padding .15rem

.md_view 
    padding .1rem .3rem
    text-align justify
    ul,ol
        padding auto
        margin .1rem 0 .1rem .4rem
        list-style-position outside
        li 
            margin .1rem 0
        
    
    ul
        list-style-type disc
    
    ol
        list-style-type decimal
    
    h1,h2,h3 
        margin .3rem 0
        line-height 1.3
    
    h1
        font-size 1.6em
    
    h2
        font-size 1.5em
    
    h3
        font-size 1.4em
    
    h4
        font-size 1em
        color #f80
        font-weight normal
    
    p 
        margin .3rem 0
    
    img 
        max-width 100%
    table
        width: 100%;
        background #c2a77d;
        border-collapse collapse
        border-spacing 0.5px
        overflow hidden
        th,td
            width: 25%;
            border: 1px solid #c2a77d;
            height: 4px;
            line-height: 1.2
            font-size: 14px;
            color: #666;
            text-align: center;
            padding 10px 2px
        th
            background #F8E1C1;
        td
            background #fff;
            white-space nowrap


.callback
    margin .2rem .15rem
    color #fff
    input 
        width 100%
        background #242424
        padding:.05rem .1rem
        height .45rem
        border-radius .05rem
        font-size .16rem
    
    p 
        margin .1rem 0 .2rem 0
        color #999
    
    .btn 
        width 80%
        margin .3rem auto
        text-align center
        border-radius .5rem
        background $gold
        line-height .4rem
        font-size .16rem

    

