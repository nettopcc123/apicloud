.tp_nav
.jl_nav
    height .8rem
    background #2e2e31
    bor(fixed,auto,0,$tmb)
    top $head_h
    width 100%
    display table
    text-align center
    z-index 9
    li
        display table-cell
        width 14%
        color #999
        &:not(:last-child)
            background url("../image/line_bg.png") no-repeat right center/1px 100%
        &.active
            color $hon
.jl_nav

    li:last-child
        width 44%
        font-size .2rem
    span
        white-space nowrap
        padding .2rem .2rem .2rem 0
        position relative
        &::after
            content ''
            position absolute
            border 3px solid transparent
            border-top-color #777
            right 0
            top .3rem
    b
        padding 0 .1rem
        height 1px
        width .3rem
        background #777
        font-size 0
        display inline-block
        margin 0 .02rem
        transform scale(.5)
.tp_nav
    li
        width 33.33%
        &.active
            color $gold
        sup
            margin-left .1rem
            color $gold


header.jl_head
    .right.xds
        padding-right .2rem
        i
            position absolute
            right .28rem
            bottom .26rem
    input
        background #444
        border-radius .5rem
        width 2rem
        padding .15rem .6rem .15rem .3rem
        color #fff
        transition .3s
        font-size .24rem
        &:focus
            width 5rem

.countAll
    position fixed
    z-index 9
    border-top 1px solid #333
    width 100%
    bottom 0
    background #222
    color #999
    padding .2rem .3rem
    text-align left
    font-size .24rem
    overflow-x auto
    white-space nowrap
    dl
        display inline-table
        &:not(:last-child)
            margin-right .3rem
        dt,dd
            display table-cell
        dd
            padding-left .1rem
            color $gold
.jilu
    padding .3rem 0
    color #555
    .li
        margin .3rem 0
    h2
        font-size .26rem
        font-weight normal
        color #777
        margin .1rem 0 .2rem 0
    dl
        padding .2rem 0 .2rem 1.2rem
        position relative
        &:not(:last-child)
            bor(relative,auto,0,rgba(0,0,0,.12))
        &:not(:first-child)
            bor(relative,1px,auto,rgba(255,255,255,.08))

        dt
        h4
            position absolute
        dd
            padding-left .3rem
            border-left 1px solid #ccc5
            &.sy_y
                h3::after
                content '(赢)'
                color #f80
                margin-left .1rem
                h4
                    color #f80
            &.sy_s
                h3::after
                content '(输)'
                color #c30
                margin-left .1rem
                h4
                    color #c30
        dt
            top .1rem
            left .2rem
            text-align center
            p
                color #777
                margin-top -.1rem
        h4
            top 50%
            right .2rem
            font-size .32rem
            font-weight 400
            transform translateY(-50%)
            color #f74658
        h3
            font-weight normal
            margin-bottom .2rem
            padding-right 1.2rem
            line-height 1.2
            b
                font-weight 300
                margin-left .1rem
                color #f1552a
                &.s
                    color #c34919
                &.y
                    color #f1982e
        p
            color #28adf9
            line-height 1
            max-width 4rem
            span
                color #06c
                margin-right .3rem
                &.active
                    color #05a128
                &:nth-child(2)
                    opacity .7
            &.SUCCESS
                color #05a128

            // 审核中
            &.EXAMINEING
                color #058da1

            // 处理中
            &.PROCESSING
                color #016ec8

            // 未结算
            &.SETTLEMENT
                color #9034d9

            // 已领取
            &.ADMISSION
                color #67a105

            // 取消
            &.CANCEL
                color #cb4283
            // 失败
            &.FAIL
                color #c93d09
    .btnx
    .jieguo
        background #f50
        color #fff
        padding .05rem .2rem
        border-radius 2px
    .jieguo
        background #444


.show_tz
    position fixed
    z-index 99
    top 0
    left 0
    width 100%
    height 100%
    background #9995
    .icon-close
        font-size .4rem
        position absolute
        right .1rem
        top .1rem
        padding .1rem
    .box
        position absolute
        width 80%
        padding .3rem
        background #fff
        box-shadow 0 0 .4rem #0002
        border 1px solid #4444
        top 40%
        left 50%
        transform translate(-50%,-50%)
        border-radius .1rem
        font-size .26rem
        dl
            display table
            padding .1rem 0
            dt,dd
                display table-cell
            dt
                width 1.5rem
                opacity .5


.feedback
    padding .2rem .3rem
    li
        textarea
            width 100%
            height 4rem
            padding .1rem
            resize none
            margin .3rem 0
            font-size .26rem
            line-height 1.4
    .btn
        margin-top .8rem

.feed_menu
    position fixed
    top 0
    z-index 9
    width 100%
    height 100%
    transition .5s
    transform translateY(100%)
    &.show
        transform translateY(0%)
    .bg
        position absolute
        background #fff1
        width 100%
        height 100%
    ul
        position absolute
        border-radius 0
        width 100%
        bottom 0
        z-index 4
        i
            opacity 0
        .active i
            opacity 1

.msg_list
    padding .2rem .3rem
    font-size .28rem
    .li
        padding .2rem .3rem
        background #0001
        position relative
        margin .2rem 0
        border-radius .1rem
        i
            position absolute
            right .2rem
            top 50%
            line-height 1rem
            opacity .6
            font-size .24rem
            transform translateY(-50%)
        h3
            font-weight normal
            color $gold
            margin 0 .3rem .05rem 0
            padding-bottom .05rem
            bor(relative,auto,0,#0001)
            font-size .24rem
            sub
                color #777
            span
                margin-right .3rem
        p
            padding-right .8rem
            color #333
            ovt()
        .dot
            width .1rem
            height .1rem
            background #f93
            border-radius 50%
            margin -.3rem -.1rem 0 0



.msg_chat
    padding .3rem .3rem 1.3rem .3rem
    .li
        padding .1rem 0
        h6
            font-size .18rem
            text-align center
            font-weight normal
            color #bbb
            padding .05rem
        &.me
            text-align right
            .avatar
                display none
            .box
                margin-right .2rem
                background #a7d04d
                color #fff
                &::before
                    left auto
                    right -.15rem
                    border-right-color #a7d04d
                    transform skewX(-15deg) rotate(-90deg)

        .box
            display inline-block
            max-width 5rem
            white-space pre-wrap
            padding .1rem .2rem
            background #f5f5f5
            border-radius .1rem
            text-align justify
            position relative
            vertical-align top
            &::before
                content ''
                position absolute
                z-index 2
                border .2rem solid transparent
                border-right-color #f5f5f5
                top 0
                left -.1rem
                transform skewX(15deg) rotate(-90deg)

        .avatar
            display inline-block
            width 1rem
            height 1rem
            border-radius 50%
            background #fdf4ed url("../image/logo_s.svg") no-repeat center
            background-size 90% auto
            border 1px solid #0001
            margin -.1rem .1rem 0 0


