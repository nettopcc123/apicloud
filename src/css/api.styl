.loops {
    -webkit-animation: loops 10s infinite;
    animation: loops 10s infinite;
}

@-webkit-keyframes loops {
    from {
        -webkit-transform: rotate(0deg);
    }
    to {
        -webkit-transform: rotate(3600deg);
    }
}
@keyframes loops {
    from {
        transform: rotate(0deg);
    }
    to {
        transform: rotate(3600deg);
    }
}
