bor($pos,$top,$bot,$cor)
    position $pos
    if $top == auto
        &:after
            content: '';
            position: absolute;
            left: 0;
            background: $cor
            bottom -1px
            width: 100%
            height: 1px
            -webkit-transform: scaleY(-0.5)
            transform: scaleY(-0.5)
            -webkit-transform-origin: 0 0
            transform-origin: 0 0
    else
        &:before
            content: '';
            position: absolute;
            left: 0;
            background: $cor
            top $top
            width: 100%
            height: 1px
            -webkit-transform: scaleY(-0.5)
            transform: scaleY(-0.5)
            -webkit-transform-origin: 0 0
            transform-origin: 0 0


