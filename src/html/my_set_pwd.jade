extends ../layout
block vue
    .my_bank_add
        ul.list-group.inp_list(v-if="step==0")
            li
                b 提款密码
                input#ta1(v-model="tka.atmPassword" v-bind:type="pst1?'password':'tel'" maxlength="6" placeholder="请输入6位数字提款密码" @keyup.enter="sub")
                i(:class="pst1?'icon-eye':'icon-eye-blocked'" @click="pst1=pst1?false:true" )
            li
                b 确认密码
                input#ta2(v-model="tka.reAtmPassWord" v-bind:type="pst2?'password':'tel'" maxlength="6" placeholder="请确认提款密码" @keyup.enter="sub")
                i(:class="pst2?'icon-eye':'icon-eye-blocked'" @click="pst2=pst2?false:true" )


        ul.list-group.inp_list(v-if="step==1")
            li
                b 旧密码
                input#tb1(v-model="tk.oldPassword" v-bind:type="pst1?'password':'tel'" maxlength="6" placeholder="请输入您的旧密码" @keyup.enter="sub")
                i(:class="pst1?'icon-eye':'icon-eye-blocked'" @click="pst1=pst1?false:true" )
            li
                b 新密码
                input#tb2(v-model="tk.atmPassword" v-bind:type="pst2?'password':'tel'" maxlength="6" placeholder="请输入6位数字新密码" @keyup.enter="sub")
                i(:class="pst2?'icon-eye':'icon-eye-blocked'" @click="pst2=pst2?false:true" )
            li
                b 确认新密码
                input#tb3(v-model="tk.reAtmPassword" v-bind:type="pst3?'password':'tel'" maxlength="6" placeholder="请确认新密码" @keyup.enter="sub")
                i(:class="pst3?'icon-eye':'icon-eye-blocked'" @click="pst3=pst3?false:true" )



        ul.list-group.inp_list(v-if="step==2")
            li
                b 旧密码
                input#p1(v-model="dl.oldPwd" maxlength="12" v-bind:type="pst1?'password':'text'" placeholder="请输入您的旧密码" @keyup.enter="sub")
                i(:class="pst1?'icon-eye':'icon-eye-blocked'" @click="pst1=pst1?false:true" )
            li
                b 新密码
                input#p2(v-model="dl.newPwd" maxlength="12" v-bind:type="pst2?'password':'text'" placeholder="请输入新密码" @keyup.enter="sub")
                i(:class="pst2?'icon-eye':'icon-eye-blocked'" @click="pst2=pst2?false:true" )
            li
                b 确认新密码
                input#p3(v-model="dl.rePwd" maxlength="12" v-bind:type="pst3?'password':'text'" placeholder="请确认新密码" @keyup.enter="sub")
                i(:class="pst3?'icon-eye':'icon-eye-blocked'" @click="pst3=pst3?false:true" )


        .tip(v-if="step==2") 登录密码限制为6-12位字符，不允许空格等特殊符号



        .btn(@click="sub") 确定



block js
    script(src="../script/md5-node.min.js")
    script(type='text/javascript' src="../script/my_set_pwd.js")

